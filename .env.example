# Signal CLI settings
SIGNAL_CLI_PATH=signal-cli
SIGNAL_ACCOUNT=+15550001111
# Optional comma-separated recipients. If omitted, active users from data/subscribers.json are used.
SIGNAL_RECIPIENTS=+15550002222,+15550003333

# Scheduler (local machine time)
DELIVERY_HOUR=9
DELIVERY_MINUTE=0

# Bible API base URL
BIBLE_API_BASE_URL=https://bible-api.com

# Subscriber store file
SUBSCRIBERS_FILE=data/subscribers.json

# Verse interaction state and logs
VERSE_FEEDBACK_FILE=data/verse-feedback.json
DELIVERY_LOG_FILE=data/delivery-log.json
DEVOTIONAL_QUEUE_FILE=data/devotional-queue.json

# Reply handling
REPLY_POLL_INTERVAL_SECONDS=90
REPLY_POLL_RECEIVE_TIMEOUT_SECONDS=5

# Devotional timing
# Send queued devotionals at this local hour for same-day requests
EARLY_EVENING_HOUR=18
# If user requests devotional at/after this local hour, send immediately
DEVOTIONAL_IMMEDIATE_AFTER_HOUR=17

# Timezone used for devotional timing and date stamps
TIMEZONE=America/New_York
